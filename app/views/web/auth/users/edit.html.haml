%section.page-sign-in.mb40
  .container
    .row
      .col-sm-10.col-sm-offset-1
        .mb20= render 'shared/job_page_header', header: t('auth.users.edit.edit_user_label')
        = simple_form_for @user, html: { class: 'b-sign-in form' } do |f|
          = render 'form', f: f
          = f.submit t('auth.users.form.submit'), class: 'btn btn-default'
        = link_to t('auth.users.edit.delete_user'), user_path(current_user), method: :delete,
                   data: { confirm: t('auth.users.edit.delete_user_confirmation') }, class: 'btn btn-danger'
