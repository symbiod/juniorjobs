= simple_form_for job, url: admin_job_path(job), method: :put, html: { class: 'container form mt40 mb40' } do |f|
  = f.input :country, as: :hidden, label: false, input_html: { class: 'form-control', value: current_country }

  .form-group.well
    %h3 Описание Вакансии
    = f.input :title, label: false, placeholder: t('activerecord.attributes.job.title')
    - collection = Job.employments.keys.map { |type| [t("activerecord.attributes.job.employments.#{type}"), type] }
    = f.select :employment, collection, label: false, include_blank: false, class: 'form-control'
    = f.input :description, label: false, placeholder: t('activerecord.attributes.job.description'),
      input_html: { class: 'form-control mt20', rows: 10 }
    = f.input :requirements, label: false, placeholder: t('activerecord.attributes.job.requirements'),
      input_html: { class: 'form-control', rows: 20 }

  .form-group.well
    %h3 Расположение
    .row
      .col-md-8
        = f.input :city, label: false, placeholder: t('activerecord.attributes.job.city'),
          input_html: { class: 'form-control' }
      .col-md-4
        = f.input :remote, as: :boolean, label: t('activerecord.attributes.job.remote')

  .form-group.well
    %h3 Компания
    = f.input :company_name, label: false, placeholder: t('activerecord.attributes.job.company_name')
    = f.input :company_page, label: false, placeholder: t('activerecord.attributes.job.company_page')
    = f.input :company_contact, label: false, placeholder: t('activerecord.attributes.job.company_contact')
    = f.input :company_phone, label: false, placeholder: t('activerecord.attributes.job.company_phone')
    = f.input :company_email, label: false, placeholder: t('activerecord.attributes.job.company_email')

  .form-group.well
    %h3 Мотивация
    .row
      .col-md-3
        - collection = Job.currencies.keys.map { |type| [t("activerecord.attributes.job.currencies.#{type}"), type] }
        = f.select :currency, collection, label: false, include_blank: false, class: 'form-control'
      .col-md-3
        = f.input :salary_from, label: false, placeholder: t('activerecord.attributes.job.salary_from'),
          input_html: { class: 'form-control' }
      .col-md-3
        = f.input :salary_to, label: false, placeholder: t('activerecord.attributes.job.salary_to'),
          input_html: { class: 'form-control' }
      .col-md-3
        = f.input :salary_by_agreement, as: :boolean, label: t('activerecord.attributes.job.salary_by_agreement'),
          input_html: { class: 'form-check-input' }, label_html: { class: 'form-check-label' }

  .form-group.well
    %h3 Время публикации вакансии
    .form-group
      = f.select :expired_at, expired_at_dates_for(f.object), label: false, include_blank: false, class: 'form-control'

  = f.button :submit, t('common.submit'), style: 'color: white; background-color: #5cb85c;'
